<% title = "Coșul Meu" %>
<% bodyClass = "cart-page" %>

<section class="section bg-dark text-white min-vh-100 py-5">
    <div class="container pt-5 mt-5">
        <h1 class="mb-5 text-center">
            <i class="bi bi-bag-check-fill me-2"></i>Coșul meu
        </h1>

        <% if (cart && cart.length > 0) { %>
            <div class="row g-4">
                <% cart.forEach(p => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow border-0 bg-gradient bg-secondary text-white rounded-4">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title fw-bold">
                                        <i class="bi bi-controller me-2"></i><%= p.nume %>
                                    </h5>
                                    <p class="card-text text-light small mb-2">
                                        <%= p.descriere %>
                                    </p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="h5 mb-0 text-warning"><%= p.pret %>€</span>
                                    <a href="/cart/remove?id=<%= p._id %>" class="btn btn-sm btn-outline-light rounded-pill">
                                        <i class="bi bi-trash3 me-1"></i>Șterge
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="text-center mt-5">
                <a href="/cart/clear" class="btn btn-danger btn-lg rounded-pill px-5">
                    <i class="bi bi-x-circle me-2"></i>Golește Coșul
                </a>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center p-5 rounded-4 bg-secondary text-white border-0">
                <i class="bi bi-emoji-frown fs-1 d-block mb-3"></i>
                <h4 class="mb-3">Coșul tău este gol</h4>
                <a href="/service-details" class="btn btn-warning text-dark rounded-pill">
                    <i class="bi bi-cart-plus me-1"></i> Adaugă produse
                </a>
            </div>
        <% } %>
    </div>
</section>
