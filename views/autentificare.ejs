<% title = "Autentificare" %>
<% bodyClass = "login-page" %>

<section class="section mt-5" id="autentificare" style="background-color: #0b0f1a;">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg p-4 rounded-4" style="background-color: #111827;">
                    <h2 class="text-center mb-4 text-white">Formular Autentificare</h2>

                    <% if (typeof mesajEroare !== 'undefined' && mesajEroare) { %>
                        <div class="alert alert-danger text-center"><%= mesajEroare %></div>
                    <% } %>

                    <form method="POST" action="/verificare-autentificare">
                        <div class="mb-3">
                            <label for="utilizator" class="form-label text-light">Utilizator:</label>
                            <input type="text" class="form-control bg-dark text-white border-secondary" id="utilizator" name="utilizator" required>
                        </div>
                        <div class="mb-3">
                            <label for="parola" class="form-label text-light">ParolÄƒ:</label>
                            <input type="password" class="form-control bg-dark text-white border-secondary" id="parola" name="parola" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-light"><%= captchaText %></label>
                            <input type="text" class="form-control bg-dark text-white border-secondary" name="captcha" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-dark fw-bold">Autentificare</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
