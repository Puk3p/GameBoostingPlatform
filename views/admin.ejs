<% title = "Panou Administrator" %>
<% bodyClass = "admin-page" %>

<section class="section bg-dark text-white min-vh-100 py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="fw-bold"><i class="bi bi-shield-lock-fill me-2 text-warning"></i> Panou Administrator</h1>
            <p class="text-muted">Adaugă un produs nou în baza de date</p>
        </div>

        <% if (mesajSucces) { %>
            <div class="alert alert-success text-center rounded-pill fw-semibold">
                <i class="bi bi-check-circle-fill me-2"></i><%= mesajSucces %>
            </div>
        <% } %>

        <% if (mesajEroare) { %>
            <div class="alert alert-danger text-center rounded-pill fw-semibold">
                <i class="bi bi-x-circle-fill me-2"></i><%= mesajEroare %>
            </div>
        <% } %>

        <form method="POST" action="/admin/adauga-produs" class="bg-secondary text-white p-4 rounded-4 shadow-lg">
            <div class="mb-3">
                <label for="nume" class="form-label">Nume produs</label>
                <input type="text" name="nume" id="nume" class="form-control rounded-pill" required>
            </div>

            <div class="mb-3">
                <label for="descriere" class="form-label">Descriere</label>
                <textarea name="descriere" id="descriere" rows="3" class="form-control rounded-4" required></textarea>
            </div>

            <div class="mb-3">
                <label for="pret" class="form-label">Preț (€)</label>
                <input type="number" name="pret" id="pret" step="0.01" class="form-control rounded-pill" required>
            </div>

            <div class="mb-3">
                <label for="categorie" class="form-label">Categorie</label>
                <input type="text" name="categorie" id="categorie" class="form-control rounded-pill" required>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning fw-semibold rounded-pill px-5">
                    <i class="bi bi-plus-circle me-2"></i> Adaugă produs
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-outline-light rounded-pill"><i class="bi bi-arrow-left me-1"></i> Înapoi la site</a>
        </div>
    </div>
</section>
